@page
@model IndexModel
@{
    ViewData["Title"] = "TeamCreatorInAspNetCore";
}

<div class="parentDiv">
    <div style="display: flex; height: 40%; width: 100%; background-color:lightblue; justify-content: center; align-items:center">
        <label class="textInsideParentDiv">Ruben Baskaran</label>
    </div>
    <div style="display: flex; height: 40%; width: 100%; background-color:purple; justify-content: center; align-items:center">
        <label class="textInsideParentDiv">@ViewData["Title"]</label>
    </div>
    <div style="display: flex; flex-direction: row; height: 20%; width: 100%; background-color:orange">
        <div style="display: flex; height: 100%; width: 50%; background-color:pink; justify-content: center; align-items:center">
            <button style="width: 80%; height: 50%" onclick="OnClickHandler('change color')">Change color</button>
        </div>
        <div style="display: flex; height: 100%; width: 50%; background-color:lightgreen; justify-content: center; align-items:center">
            <button style="width: 80%; height: 50%" onclick="OnClickHandler('change name')">Change name</button>
        </div>
    </div>
</div>
